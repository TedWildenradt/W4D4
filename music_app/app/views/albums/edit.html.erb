<h1>Edit album</h1>

<form action="<%= album_url(@album) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>
    Enter Album Title:
    <input type="text" name="album[title]" value='<%= @album.title %>'>
  </label>

  <br>

  <lable>
    Year made:
    <input type="text" name="album[year]" value="<%= @album.year %>">
  </lable>

  <br>

  <label>
    Type of Album?
    <input type="radio" name="album[live]" value="false" <%= @album.live == false ? "selected" : ""%> >Studio
    <input type="radio" name="album[live]" value="true" <%= @album.live == true ? "selected" : ""%> >Live
  </label>

  <br>
  <label>
    Band
    <select name="album[band_id]">
      <% @bands.each do |band| %>
      <option value="<%= band.id %>" <%= @album.band_id == band.id ? "selected" : "" %> ><%= band.name %></option>
      <% end %>
    </select>
  </label>

  <br>
  <input type="submit" value="Edit Album">
</form>
